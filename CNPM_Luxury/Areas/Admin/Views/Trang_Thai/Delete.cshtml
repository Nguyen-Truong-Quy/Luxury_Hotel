@model CNPM_Luxury.Model.Trang_Thai

@{
    ViewBag.Title = "Xóa trạng thái";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Xác nhận xóa trạng thái</h4>
        </div>
        <div class="card-body">
            <p>Bạn có chắc chắn muốn xóa trạng thái sau?</p>
            <dl class="row">
                <dt class="col-sm-3">Tên trạng thái</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ten_Trang_Thai)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Xóa</button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ml-2" })
            }
        </div>
    </div>
</div>
