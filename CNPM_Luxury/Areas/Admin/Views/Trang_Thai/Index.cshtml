@model IEnumerable<CNPM_Luxury.Model.Trang_Thai>

@{
    ViewBag.Title = "Danh sách trạng thái";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    int stt = 1;
}

<style>
    .card {
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    .table th {
        background-color: #007bff;
        color: #fff;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-sm {
        margin-right: 4px;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Danh sách trạng thái</h3>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <div class="card p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width: 10%">STT</th>
                    <th style="width: 60%">Tên trạng thái</th>
                    <th style="width: 30%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">Không có dữ liệu</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>@Html.DisplayFor(modelItem => item.Ten_Trang_Thai)</td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_Trang_Thai }, new { @class = "btn btn-sm btn-warning", @title = "Chỉnh sửa" })
                                @Html.ActionLink("Xem", "Details", new { id = item.ID_Trang_Thai }, new { @class = "btn btn-sm btn-info", @title = "Chi tiết" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Trang_Thai }, new { @class = "btn btn-sm btn-danger", @title = "Xóa" })
                            </td>
                        </tr>
                        stt++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
 