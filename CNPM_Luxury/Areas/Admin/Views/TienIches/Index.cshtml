@model IEnumerable<CNPM_Luxury.Model.TienIch>

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    int stt = 1;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Danh sách tiện ích</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 4.6 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            background-color: #e9f4fb;
        }

        .btn i {
            margin-right: 4px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3><i class="fas fa-list"></i> Danh sách tiện ích</h3>
            @Html.ActionLink("Thêm tiện ích", "Create", null, new { @class = "btn btn-success" })
        </div>

        <table class="table table-bordered table-hover table-striped bg-white">
            <thead class="thead-dark">
                <tr>
                    <th>STT</th>
                    <th>@Html.DisplayNameFor(model => model.First().TenTienIch)</th>
                    <th style="width: 220px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@Html.DisplayFor(modelItem => item.TenTienIch)</td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ID_TienIch }, new { @class = "btn btn-sm btn-warning mr-1", @title = "Chỉnh sửa" })
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_TienIch }, new { @class = "btn btn-sm btn-info mr-1", @title = "Xem chi tiết" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ID_TienIch }, new { @class = "btn btn-sm btn-danger", @title = "Xóa" })
                        </td>
                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    </div>
</body>
</html>
