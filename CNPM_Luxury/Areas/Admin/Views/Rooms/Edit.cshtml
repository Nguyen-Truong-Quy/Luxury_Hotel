@model CNPM_Luxury.Model.Room

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    ViewBag.Title = "Chỉnh sửa phòng";
}

<div class="container mt-4">
    <div class="card shadow p-4 rounded">
        <h2 class="text-primary mb-4">Chỉnh sửa thông tin phòng</h2>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Ma_Phong)

            <div class="mb-3">
                @Html.LabelFor(model => model.Ten_Phong, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Ten_Phong, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Ten_Phong, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Mo_Ta, new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Mo_Ta, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(model => model.Mo_Ta, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Gia_Phong, new { @class = "form-label" })
                @Html.EditorFor(model => model.Gia_Phong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gia_Phong, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Dia_Diem, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Dia_Diem, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Dia_Diem, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.So_Nguoi, new { @class = "form-label" })
                @Html.EditorFor(model => model.So_Nguoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.So_Nguoi, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Ảnh phòng (chọn file hoặc nhập URL)</label>
                <input type="file" name="ImageUpload" accept="image/*" class="form-control mb-2" />
                <input type="text" name="ImageLink" class="form-control" placeholder="Hoặc nhập đường dẫn ảnh (https://...)" />
                @Html.ValidationMessageFor(model => model.Anh_Phong, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.ID_Trang_Thai, "Trạng thái", new { @class = "form-label" })
                @Html.DropDownList("ID_Trang_Thai", null, "-- Chọn trạng thái --", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.ID_Trang_Thai, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-between mt-4">
                <input type="submit" value="Lưu thay đổi" class="btn btn-success px-4" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
